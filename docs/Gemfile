# When GitHub Pages source is /docs, this Gemfile must live in the docs folder.
# From repo root, run: cd docs && bundle install && bundle exec jekyll serve
source "https://rubygems.org"

# Required for remote_theme (GitHub Pages uses this to load the theme from GitHub)
gem "jekyll-remote-theme"

gem "github-pages", group: :jekyll_plugins
gem "webrick" # Required for Ruby 3.0+
